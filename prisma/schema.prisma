// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Material {
  id          Int      @id @default(autoincrement())
  title       String
  count       Int
  description String?
}

model Condition {
  id         Int      @id @default(autoincrement())
  value      Int
  operator   String
  entityIdId Int
  entityIdType String
  EntityId   EntityIdentification @relation(fields: [entityIdId, entityIdType], references: [id, type])
}

model Notification {
  id      Int    @id @default(autoincrement())
  entityIdId Int
  entityIdType String
  value   Int
  operator String
  date    DateTime @default(now())
  EntityId   EntityIdentification @relation(fields: [entityIdId, entityIdType], references: [id, type])
}

abstract class EntityIdentification {
  id   Int    
  type String
}